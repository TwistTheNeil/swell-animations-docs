#!/bin/bash

cd ~/Pathfinding/

git fetch &> /dev/null
check=$(git log HEAD..origin/master --oneline | wc -l)

if [ "$check" -lt "1" ]; then
    exit;
fi

git pull --rebase &> /dev/null

for i in $(find . -name tex); do
    pushd "$i" &> /dev/null
    make pdf &> /dev/null
    popd &> /dev/null
done

for i in $(find . -name *.pdf); do
    mv "$i" ~/public_html/ &> /dev/null
done

sed -i "s/Last.*/Last updated $(date)<\/font>/" ~/public_html/stuff.html
